<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Simple_User.Login">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AL_edt_email"
        android:hint="Enter Email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AL_edt_pass"
        android:hint="Enter Password"
        app:layout_constraintTop_toBottomOf="@+id/AL_edt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AL_btn_Login"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@+id/AL_edt_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AL_btn_Reg"
        android:text="Registration"
        app:layout_constraintTop_toBottomOf="@+id/AL_btn_Login"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>